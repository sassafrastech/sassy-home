<!DOCTYPE html>
<html>
<head>
  <title><%= make_title %></title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <% if is_active?(:home) %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <% end %>

  <%# force favicon refresh %>
  <link rel="shortcut icon" href="/favicon.ico?v=2" />
  <!-- Google Analytics -->
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-35084880-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</head>
<body class="<%= params[:controller] %>">

  <div class="banner">
    <div class="bannerLogo">
      <a href="/">
        <%= image_tag((is_active?(:home) ? "logo.png" : "logo2.png"), :class => "banner") %>
      </a>
      <div class="breadcrumb"><%= get_active_menu_item %></div>
    </div>
    <div class="nav">
      <ul>
        <% get_menu.each do |m| %>
          <li><%= link_to(m[:name], "/#{m[:link]}", :class => is_active?(m[:link])) %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="main">
    <%= yield %>
    <div class="clearer"></div>
  </div>

  <div class="footer">
    <p>Copyleft Sassafras Tech Collective 2014</p>
  </div>

</body>
</html>
